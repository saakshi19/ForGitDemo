		super();
		this.fileName = fileName;
		this.fileQueue= fileQueue;
		this.results = results;
	}
	
	public void run() {
		while(true) {
			File aFileorFolder = fileQueue.poll();
			if(aFileorFolder == null) {
				break;
			}
			else if() {
				
			}
			else {
				
			}
		}
	}
	
}
